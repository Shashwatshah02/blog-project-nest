    <div class="theme-loader">
      <div class="loader-p"></div>
    </div>
  </div>
  <!-- Loader ends-->
  <!-- page-wrapper Start-->
  <div class="page-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    <div class="page-main-header">

    </div>
    <!-- Page Header Ends                              -->
    <!-- Page Body Start-->
    <div class="page-body-wrapper horizontal-menu">
      <!-- Page Sidebar Start-->

      <!-- Page Sidebar Ends-->
      <div class="page-body">
        <div class="container-fluid">
          <div class="page-header">
            <div class="row">
              <div class="col-sm-6">
                <h3>Edit Product</h3>
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="">Home</a></li>
                  <li class="breadcrumb-item">Product</li>
                  <li class="breadcrumb-item active">Add Product</li>
                </ol>
              </div>
              <div class="col-sm-6">
                <!-- Bookmark Start-->

                <!-- Bookmark Ends-->
              </div>
            </div>
          </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-body">
                  <div class="form theme-form">
                    <form action="/admin/blogs/edit/<%= blog.id %>" method="POST" enctype="multipart/form-data">
                      <div class="row">
                        <div class="col">
                          <div class="mb-3">
                            <label>Blog title</label>
                            <input class="form-control" type="text" name="title" placeholder="Enter Blog title" required
                              value="<%= blog ? blog.title : '' %>">
                          </div>
                        </div>
                        <div class="col mb-3">
                          <label>Category</label>
                          <select class="form-select" name="categoryId">
                            <% categories.forEach(category=> { %>
                              <option value="<%= blog.category.id %>" <%=blog && blog.category &&
                                blog.category.id===category.id ? 'selected' : '' %>>
                                <%= category.name %>
                              </option>
                              <% }) %>
                          </select>
                        </div>


                      </div>

                      <div class="row">


                        <div class="row">
                          <div class="col">
                            <div class="mb-3">
                              <label>Blog Description</label>
                              <textarea class="form-control" name="content" id="editor" required
                                rows="3"><%= blog ? blog.content : '' %></textarea>
                            </div>
                          </div>
                        </div>



                        <br><br>

                        <input type="hidden" name="existingImage" value="<%= blog.image %>">
                        <div class="row">
                          <div class="col">
                            <div class="mb-3">
                              <label>Current Image</label>
                              <% if (blog.image) { %>
                                <div class="mb-2">
                                  <img src="/public/<%= blog.image %>" alt="Blog Image"
                                    style="max-width: 150px; height: auto;">
                                </div>
                                <% } else { %>
                                  <span>No image uploaded.</span>
                                  <% } %>

                                    <label>Upload New Image</label>
                                    <input class="form-control" type="file" name="image" accept="image/*">
                            </div>
                          </div>
                        </div>
                        <!-- <button type="submit" class="btn btn-primary">Update Product</button> -->
                        <!-- </form> -->


                        <div class="row">
                          <div class="col">
                            <div class="text-end">
                              <button class="btn btn-secondary me-3" type="submit">Add</button>
                              <!-- <a class="btn btn-danger" href="#">Cancel</a> -->
                            </div>
                          </div>
                        </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Container-fluid Ends-->
      </div>
      <!-- footer start-->

    </div>
  </div>
  <script>
